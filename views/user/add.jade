extends /layouts/_layout

block content
    span#user-ct
        form.block.centered.ui.form.raised.segment(action='/user/add', method='post')
            input(type='hidden', name='_csrf', value=csrf)
            h1.ui.center.aligned.header #{title}
            div.field
                label= email
                div.ui.left.icon.corner.labled.input
                    input(type='text', name='email', palceholder='Email', autofocus)
                    i.user.icon
                    div.ui.corner.label
                        i.icon.asterisk
            div.field
                label= password
                div.ui.left.icon.corner.labeled.input
                    input(type='password', name='password', paceholder='Password')
                    i.lock.icon
                    div.ui.corner.label
                        i.icon.asterisk
            div.field
                label= language
                div.ui.fluid.search.selection.dropdown
                    input(type='hidden', name='locale', value=languages[0].value)
                    i.dropdown.icon
                    div.default.text #{languages[0].text}
                    div.menu
                        each lang in languages
                            if lang.value == localeString
                                div.item.active(data-value=lang.value)
                                    i(class=lang.flag)
                                    span #{lang.text}
                            else
                                div.item(data-value=lang.value)
                                    i(class=lang.flag)
                                    span #{lang.text}
            div.fluid.ui.blue.submit.button= title

block additional-js
    script(type="text/javascript") require(['user'], function(m){ m.initializeAdd(); });
